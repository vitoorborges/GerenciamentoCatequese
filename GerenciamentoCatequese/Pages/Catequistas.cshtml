@page
@model GerenciamentoCatequese.Pages.CatequistaModel
@{
}


<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/datagrid.css" rel="stylesheet" />
    <title>Catequese</title>

</head>

<body>
    <div class="mt-4">
        <h1 style="text-align: center">Catequese PNSD</h1>
    </div>

    <div class="page-wrapper mt-3">
        <!-- BEGIN PAGE HEADER -->
        <div class="page-header d-print-none">
            <div class="container-xl">
                <div class="row g-2 align-items-center">
                    <div class="col">
                        <h2 class="page-title">Catequistas</h2>
                    </div>
                    <!-- Page title actions -->
                    <div class="col-auto ms-auto d-print-none">
                        <div class="d-flex">
                            <input type="search" class="form-control d-inline-block w-9 me-3" placeholder="Pesquisar">
                            <a href="./catequistaCadastro" class="btn btn-primary btn-3">
                                <!-- Download SVG icon from http://tabler.io/icons/icon/plus -->
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-2">
                                    <path d="M12 5l0 14"></path>
                                    <path d="M5 12l14 0"></path>
                                </svg>
                                Adicionar catequista
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE HEADER -->
        <!-- BEGIN PAGE BODY -->
        <div class="page-body">
            <div class="container-xl">
                <div class="row row-cards">
                    @foreach (var item in Model._catequistas)
                    {
                        <div class="col-md-6 col-lg-3">
                            <div class="card">
                                <div class="card-body p-4 text-center">
                                    <img class="avatar avatar-xl mb-3" src="@item.Foto" />
                                    <h3 class="m-0 mb-1"><a href="#">@item.Nome</a></h3>
                                    <div class="text-secondary">@item.DescricaoTurma</div>
                                    <div class="mt-3">
                                        @if(item.DescricaoPerfil == "Catequista")
                                        {
                                            <span class="badge bg-green-lt">@item.DescricaoPerfil</span>
                                        }
                                        else if(item.DescricaoPerfil == "Líder")
                                        {
                                            <span class="badge bg-purple-lt">@item.DescricaoPerfil</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-red-lt">@item.DescricaoPerfil</span>
                                        }
                                    </div>
                                </div>
                                <div class="d-flex">
                                    <a href="#" class="card-btn">
                                        <svg style="margin-right:2px" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-search">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                            <path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0" />
                                            <path d="M21 21l-6 -6" />
                                        </svg>
                                        Detalhes
                                    </a>

                                </div>
                            </div>
                        </div>
                    }


                </div>                
            </div>
        </div>        
    </div>
</body>
</html>