<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GerenciamentoCatequese</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GerenciamentoCatequese.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tabler.css" asp-append-version="true" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
</head>
<body>
    
    <header>
        @if (User?.Identity?.IsAuthenticated ?? false)
        {
            <nav class="navbar navbar-expand-md navbar-light bg-light">
                <div class="container-xl d-flex justify-content-between">
                    <a class="navbar-brand" href="#">
                        <img class="LogoCebraspe" src="~/assets/Pastoral.png" height="60" width="150" alt="Logo cebraspe">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-menu" aria-controls="navbar-menu" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbar-menu">
                        <ul class="navbar-nav me-auto" id="nav-left">
                            <!-- Outros itens, se houver -->
                        </ul>
                        <div class="d-flex" id="nav-right">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <div class="dropdown">
                                        <button style="background: none; border: none; padding: 0; font-size: inherit; color: inherit;" data-bs-toggle="dropdown" aria-expanded="false">
                                            <span class="avatar avatar-rounded bg-primary-lt text-primary fw-bold">
                                                @User.FindFirst("Iniciais")?.Value
                                            </span>
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-end">
                                            <div class="text-center mb-3">
                                                <p>
                                                    <span class="fw-bold">@User.Identity.Name</span>
                                                </p>
                                            </div>
                                            <div class="dropdown-divider"></div>
                                            <form method="post" asp-page="./Logout" class="d-inline">
                                                <button type="submit" class="dropdown-item d-flex align-items-center text-danger">
                                                    <p class="mb-0">
                                                        Sair
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-logout text-danger">
                                                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                            <path d="M14 8v-2a2 2 0 0 0 -2 -2h-7a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 -2h7a2 2 0 0 0 2 -2v-2" />
                                                            <path d="M9 12h12l-3 -3" />
                                                            <path d="M18 15l3 -3" />
                                                        </svg>
                                                    </p>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
        }
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/tabler.js" asp-append-version="true"></script>

    @await Component.InvokeAsync("Notyf");
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>