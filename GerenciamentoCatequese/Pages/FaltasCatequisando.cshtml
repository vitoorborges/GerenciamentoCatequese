@page
@model GerenciamentoCatequese.Pages.FaltasCatequisandoModel
@{
    ViewData["Title"] = "Controle de Frequência";
}

@Html.AntiForgeryToken()

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gerenciamento</title>
</head>

<body>
    <div class="mt-4">
        <h1 style="text-align: center">Catequese PNSD 2025</h1>
    </div>

    <div class="mt-4">
        <div class="card card-md container-narrow py-2 px-2">
            <div class="card-body">

                <div class="container-xl mb-4">
                    <h3 class="titulo-card">
                        Controle de frequência da turma:
                        @Model._catquisando.FirstOrDefault()!.DescricaoTurma
                    </h3>

                    <div class="col-12">
                        <form id="formFrequencia">
                            <div class="card">

                                <div class="card-header">
                                    <div class="col-md-2">
                                        <label class="form-label">Data da frequência:</label>
                                        <input type="date"
                                               id="dataFrequencia"
                                               class="form-control mt-2" />
                                    </div>
                                </div>

                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Nome</th>
                                                <th>Frequência</th>
                                                <th>Justificativa</th>
                                            </tr>
                                        </thead>
                                        <tbody id="tabela-body">
                                            @foreach (var item in Model._catquisando)
                                            {
                                                <tr data-id="@item.IdCatequisando">
                                                    <td>@item.NomeCatequisando</td>

                                                    <td>
                                                        <label class="me-2">
                                                            <input type="radio"
                                                                   class="frequencia-radio"
                                                                   name="freq_@item.IdCatequisando"
                                                                   value="1">
                                                            Presente
                                                        </label>

                                                        <label class="me-2">
                                                            <input type="radio"
                                                                   class="frequencia-radio"
                                                                   name="freq_@item.IdCatequisando"
                                                                   value="2">
                                                            Falta não justificada
                                                        </label>

                                                        <label>
                                                            <input type="radio"
                                                                   class="frequencia-radio"
                                                                   name="freq_@item.IdCatequisando"
                                                                   value="3">
                                                            Falta justificada
                                                        </label>
                                                    </td>

                                                    <td>
                                                        <input type="text"
                                                               class="form-control justificativa"
                                                               disabled>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                                <div class="card-footer text-end">
                                    <button type="submit"
                                            class="btn btn-primary">
                                        Registrar
                                    </button>
                                </div>

                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script>
    document.addEventListener("DOMContentLoaded", function () {

        // Habilita/desabilita justificativa
        document.querySelectorAll(".frequencia-radio").forEach(radio => {
            radio.addEventListener("change", function () {
                const linha = this.closest("tr");
                const justificativa = linha.querySelector(".justificativa");

                if (this.value === "3") {
                    justificativa.disabled = false;
                    justificativa.focus();
                } else {
                    justificativa.disabled = true;
                    justificativa.value = "";
                }
            });
        });

        const form = document.getElementById("formFrequencia");
        if (!form) return;

        form.addEventListener("submit", function (e) {
            e.preventDefault();

            const tokenInput =
                document.querySelector('input[name="__RequestVerificationToken"]');
            if (!tokenInput) {
                alert("Token de segurança não encontrado.");
                return;
            }

            const dataInput = document.getElementById("dataFrequencia");
            if (!dataInput || !dataInput.value) {
                alert("Informe a data da frequência.");
                return;
            }

            const dadosEnvio = {
                dataFrequencia: dataInput.value,
                frequencias: []
            };

            let erro = false;

            document.querySelectorAll("#tabela-body tr").forEach(tr => {
                const frequencia = tr.querySelector(".frequencia-radio:checked")?.value;
                const justificativa = tr.querySelector(".justificativa").value;

                if (!frequencia) {
                    erro = true;
                }

                if (frequencia === "3" && !justificativa.trim()) {
                    erro = true;
                }

                dadosEnvio.frequencias.push({
                    idCatequisando: tr.dataset.id,
                    frequencia,
                    justificativa
                });
            });

            if (erro) {
                alert("Preencha a frequência de todos e a justificativa quando necessário.");
                return;
            }

            fetch("/FaltasCatequisando?handler=Registrar", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                    "RequestVerificationToken": tokenInput.value
                },
                body: JSON.stringify(dadosEnvio)
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error("Erro ao salvar");
                }

                // Redireciona após sucesso
                window.location.href = "/Index";
            })
            .catch(err => {
                console.error(err);
                alert("Erro ao registrar frequência");
            });
        });
    });
</script>

